<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:paddingTop="13.3dp"
    android:paddingRight="16.7dp"
    android:paddingLeft="17dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:layout_gravity="center_vertical">

        <TextView
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="2.7sp"
            android:id="@+id/order_dialog_table_no"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="7번 테이블"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:background="@android:color/transparent"
            android:gravity="right"
            android:id="@+id/order_dialog_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            android:text="X"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/order_dialog_body"
            android:text="잔 1개 추가"
            android:textSize="14.7sp"
            android:textColor="#fff"
            android:lineSpacingExtra="2.7sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8.3dp"/>

    <LinearLayout
        android:layout_marginBottom="13.3dp"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_dialog_total_price"
            android:textSize="14.7sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="2.7sp"
            android:text="27,900원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_order_dialog_ok"
                    android:textColor="#000"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="#fff"
                    android:layout_marginRight="20dp"
                    android:text="확인"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_order_dialog_cancel"
                    android:textColor="#000"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="#fff"
                    android:layout_marginLeft="20dp"
                    android:text="닫기"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_order_dialog_reissue"
                    android:textColor="#000"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="#fff"
                    android:layout_marginRight="20dp"
                    android:text="재발행"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/btn_order_dialog_pay_cancel"
                    android:textColor="#000"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="#fff"
                    android:layout_marginLeft="20dp"
                    android:text="결제취소"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>