<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/border_recyclerview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp">

    <LinearLayout
        android:id="@+id/order_recycler_layout"
        android:paddingLeft="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <CheckBox
                android:id="@+id/service_list_checkbox"
                android:buttonTint="#707070"
                android:background="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/order_table_no"
                android:layout_weight="4"
                android:textSize="16sp"
                android:textColor="#8e8e8e"
                android:lineSpacingExtra="2sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/order_menu"
                android:layout_weight="8"
                android:textSize="16sp"
                android:textColor="#8e8e8e"
                android:text="치즈계란말이"
                android:lineSpacingExtra="2sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/order_total_price"
                android:layout_weight="6"
                android:textSize="16sp"
                android:textColor="#8e8e8e"
                android:lineSpacingExtra="2sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/order_payment_status"
                android:layout_weight="5"
                android:textSize="16sp"
                android:textColor="#8e8e8e"
                android:lineSpacingExtra="2sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            tools:ignore="RtlCompat" >

            <LinearLayout
                android:gravity="center"
                android:layout_weight="3"
                android:layout_marginBottom="-15dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/order_payment_type"
                    android:textAlignment="center"
                    android:text="카드"
                    android:textColor="#fff"
                    android:background="@drawable/card_border_rectangle"
                    android:layout_width="70dp"
                    android:layout_height="26.7dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/order_time"
                    android:textSize="16sp"
                    android:textColor="#8e8e8e"
                    android:text="10:10:10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>